page{
  height: 100%;
}
.page {
  width: 100%;
  height: 100%;
  background: #f5f6f7;
}

.select {
  width: 100%;
  height: 80rpx;
  display: flex;
  background: #fff;
  justify-content: center;
  align-items: center;
  color: #2b2d33;
  font-size: 30rpx;
}

.select .arrow {
  width: 14rpx;
  height: 14rpx;
  margin-left: 12rpx;
}

.record {
  height: 130rpx;
  display: flex;
  background: #fff;
  justify-content: space-between;
  align-items: center;
  margin-left: 32rpx;
  border-bottom: 2rpx solid #e8e8e8;
}

.record-view {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.consumption {
  color: #2b2d33;
  font-size: 32rpx;
}

.record-date {
  color: #a3a5ad;
  font-size: 24rpx;
}

.record-view1 {
  width: 50%;
  display: flex;
  font-weight: 500;
  justify-content: flex-end;
  align-items: center;
  color: #2b2d33;
  font-size: 32rpx;
  margin-right: 32rpx;
  font-family: DINAlternate-Bold, DINAlternate;
}

.selects {
  width: 100%;
  height: 1000rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.selects image {
  width: 310rpx;
  height: 270rpx;
}

.selects text {
  color: #63646b;
  font-size: 28rpx;
}

.entirely {
  width: 100%;
  height: 98rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #a3a5ad;
  font-size: 24rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
