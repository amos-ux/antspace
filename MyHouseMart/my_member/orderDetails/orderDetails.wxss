@import '/myfont.wxss';

page {
  background-color: #f7f8f9;
}

.container {
  width: 100%;
  height: 100%;
  background-color: #f7f8f9;
  position: relative;
}

.banner {
  width: 100%;
  height: 480rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: center;
}

.banner .banner-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 2;
  filter: blur(40rpx);
  transform: scale(2);
  -webkit-filter: blur(30rpx);
}

.banner .show-banner {
  width: 702rpx;
  height: 288rpx;
  margin-top: 32rpx;
  z-index: 3;
  border-radius: 12rpx;
}

/* 分割背景图 */

.background-img {
  width: 100%;
  height: 134rpx;
  position: absolute;
  bottom: -100rpx;
  left: 0;
  z-index: 7;
}

.background-img>image {
  width: 100%;
  height: 100%;
}

.shoplist {
  width: 100%;
  z-index: 9;
  padding: 0 24rpx;
  margin-top: -130rpx;
  position: relative;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  margin-bottom: 32rpx;
  flex-direction: column;
}

.shoplist .shop-content {
  width: 702rpx;
  height: 100%;
  border-radius: 12rpx;
  background-color: #fff;
}

.shoplist .shop-content:nth-child(2) {
  margin-top: 16rpx;
}

.shop-banner {
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 24rpx 0 8rpx 32rpx;
  border-radius: 12rpx 12rpx 0 0;
  background: linear-gradient(180deg, rgba(255, 231, 194, 1) 0%, rgba(255, 255, 255, 1) 100%);
}

.shop-bigtitle {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.to-activity {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.shop-banner-tip {
  color: #67686b;
  font-size: 24rpx;
  font-weight: 400;
}

.shop-desc {
  color: #67686b;
  font-size: 24rpx;
}

.big-title {
  color: #2b2d33;
  font-size: 34rpx;
  font-weight: 500;
  font-family: PingFangSC-Medium, PingFang SC;
}

.to-activity>.tosvg {
  width: 40rpx;
  height: 20rpx;
}

.to-activity>.shop-desc {
  color: #67686b;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
}

.noshop {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin-top: 96rpx;
  margin-bottom: 40rpx;
}

.noshop>image {
  width: 282rpx;
  height: 196rpx;
}

.noshop>text {
  font-size: 32rpx;
  color: #2b2d33;
  font-weight: 500;
}

.toIndex {
  width: 100%;
  margin-top: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.toIndex .index-btn {
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 24rpx;
  color: #fff;
  background-color: #ff5a52;
  font-size: 28rpx;
  margin-bottom: 72rpx;
  border-radius: 32rpx;
}

.back {
  position: fixed;
  left: 24rpx;
  bottom: 48rpx;
  z-index: 10;
}

.back_home, .back_shop {
  display: inline-block;
  width: 88rpx;
  height: 88rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 2rpx 4rpx 0px rgba(0, 0, 0, 0.2);
  opacity: 0.95;
  border: 1rpx solid rgba(247, 246, 246, 1);
  border-radius: 50%;
  text-align: center;
  line-height: 88rpx;
  position: relative;
  z-index: 10;
}

.back_home {
  margin-right: 24rpx;
}

.back_home image {
  width: 50rpx;
  height: 45rpx;
  margin-top: 21.5rpx;
}

.back_shop image {
  width: 47rpx;
  height: 45rpx;
  margin-top: 21.5rpx;
}

.shop-main {
  margin: 32rpx;
  display: flex;
  flex-wrap: wrap;
}

.value-top {
  width: 308rpx;
  height: 308rpx;
  border-radius: 12rpx 12rpx 0 0;
  position: relative;
}

.shop-tag {
  position: absolute;
  right: 0;
  top: 0;
  width: 120rpx;
  text-align: center;
  color: #fff;
  font-weight: 500;
  font-size: 24rpx;
  height: 44rpx;
  line-height: 44rpx;
  background: linear-gradient(270deg, rgba(133, 64, 251, 1) 0%, rgba(77, 77, 242, 1) 100%);
  border-radius: 2rpx 12rpx 2rpx 12rpx;
}

.shop-value {
  width: 308rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0px 4px 16px 0px rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
  background-color: #fff;
  overflow: hidden;
}

.value-img {
  width: 100%;
  height: 100%;
  border-radius: 12rpx 12rpx 0 0;
}

.value-bottom {
  padding: 20rpx;
  box-sizing: border-box;
}

.value-bottom .value-con {
  width: 100%;
  height: 120rpx;
  color: #2b2d33;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.value-price {
  height: 60rpx;
  line-height: 60rpx;
}

.value-price>.disPrice {
  color: #ff5a52;
  font-size: 32rpx;
  font-weight: 500;
  margin-right: 4rpx;
}

.value-price>.salePrice {
  color: #d1ad79;
  font-size: 24rpx;
  text-decoration: line-through;
  font-weight: 400;
}

.value-bottom .buy-btn {
  width: 100%;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 4rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  background-color: #D1AD79;
}

.shop-main .shop-value:nth-child(n+3) {
  margin-top: 20rpx;
}

.shop-main .shop-value:nth-child(2n) {
  margin-left: 22rpx;
}
