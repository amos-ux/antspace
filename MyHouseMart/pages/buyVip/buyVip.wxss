page {
  overflow: hidden;
  overflow-x: hidden;
  box-sizing: border-box;
}

.page {
  width: 100%;
  height: 100%;
  overflow-y: scroll;
  background: #f5f6f7;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

.buy {
  width: 100%;
  height: 260rpx;
  background: #262833;
  padding-top: 24rpx;
  overflow: hidden;
}

.message {
  height: 116rpx;
  width: 100%;
  display: flex;
  margin-top: 28rpx;
  margin-left: 48rpx;
  justify-content: flex-start;
}

.message-img {
  width: 116rpx;
  height: 116rpx;
  border-radius: 50%;
}

.message-img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.personage {
  height: 116rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 70%;
  margin-left: 24rpx;
}

.name {
  color: #fff;
  font-size: 36rpx;
  font-weight: 500;
}

.vipmessage {
  display: flex;
  justify-content: flex-start;
}

.vipicon {
  /* width: 138rpx; */
  height: 42rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 6rpx;
  background: rgba(255, 255, 255, 0.1);
  padding: 0 6rpx;
}

.vipicon image {
  width: 24rpx;
  height: 22rpx;
}

.vip {
  color: #fff;
  font-size: 22rpx;
  white-space: nowrap;
  margin-left: 4rpx;
}

.date {
  color: #a3a5ad;
  font-size: 22rpx;
  margin-left: 8rpx;
}

.buyText {
  width: 100%;
  height: 40rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 54rpx;
}

.text {
  color: #c0a181;
  font-size: 28rpx;
  font-weight: 500;
}

.textImg {
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-img {
  width: 30rpx;
  height: 30rpx;
  display: flex;
}

.icon-img image {
  width: 100%;
  height: 100%;
}

.icon-text {
  color: #c0a181;
  font-size: 24rpx;
  margin-left: 8rpx;
}

.setMeal {
  width: 100%;
  background: #f5f6f7;
  margin-bottom: 32rpx;
}

.setMeal-top {
  height: 92rpx;
  display: flex;
  justify-content: flex-end;
  color: #2b2d33;
  font-size: 32rpx;
  margin-left: 42rpx;
  font-weight: 500;
  flex-direction: column;
}

.card-meal {
  width: 89%;
  display: flex;
  padding-top: 20rpx;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-left: 42rpx;
}

.card {
  width: 288rpx;
  height: 228rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.cardImg {
  width: 288rpx;
  height: 172rpx;
  position: relative;
}

.cardImg1 {
  width: 46rpx;
  height: 46rpx;
  position: absolute;
  right: 12rpx;
  bottom: 12rpx;
}

.card view {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.text1 {
  color: #2b2d33;
  font-size: 28rpx;
}

.text1 {
  color: #2b2d33;
  font-size: 28rpx;
  font-weight: 500;
}

.text2 {
  font-size: 28rpx;
  color: #2b2d33;
}

.experience {
  width: 100%;
  height: 142rpx;
  display: flex;
  background: #f5f6f7;
  justify-content: center;
}

.card-experience {
  width: 622rpx;
  height: 100%;
  display: flex;
  border-radius: 16rpx;
  background: #dbbf8f;
  justify-content: space-between;
}

.experience-left {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.experience-right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.experience-text {
  color: #fff;
  font-size: 32rpx;
  margin-top: 28rpx;
  margin-left: 32rpx;
}

.experience-text1 {
  color: #fff;
  font-size: 24rpx;
  margin-left: 32rpx;
}

.experience-text2 {
  width: 160rpx;
  height: 56rpx;
  border-radius: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  color: #ff7459;
  font-size: 28rpx;
  margin-top: 44rpx;
  margin-right: 16rpx;
}

.pay {
  width: 100%;
  height: 108rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
}

.pay-view {
  width: 530rpx;
  height: 108rpx;
  line-height: 108rpx;
  color: #2b2d33;
  font-size: 40rpx;
  font-weight: 500;
  padding-left: 32rpx;
  background: #fff;
}

.pay-bottom {
  width: 220rpx;
  height: 108rpx;
  line-height: 108rpx;
  text-align: center;
  color: #2b2d33;
  font-weight: 500;
  font-size: 32rpx;
  background: #ffeb0d;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
