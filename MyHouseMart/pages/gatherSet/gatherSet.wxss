.faceset {
  width: 100%;
  height: 65%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-top: 1rpx solid #E6E6E6;
  box-sizing: border-box;
}

.faceset-top {
  font-size: 24px;
  color: #000;
}

.faceset-message {
  font-size: 16px;
  color: #5c5b5a;
}

.face-image {
  display: flex;
  position: relative;
}

.brush-face {
  width: 100%;
  height: 35%;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.faceset-button {
  color: #2b2d33;
  font-size: 32rpx;
  background: #fff;
  width: 640rpx;
  height: 92rpx;
  line-height: 92rpx;
  font-weight: bold;
  border: 1rpx solid #d9d9d9;
  border-radius: 46rpx;
  box-sizing: border-box;
}

.faceset-text {
  color: #67686b;
  font-size: 28rpx;
  margin: 32rpx 0;
}

.backface {
  width: 436rpx;
  height: 436rpx;
  margin-top: 48rpx;
  animation: rotation 3s linear infinite;
}

.manface {
  width: 380rpx;
  height: 380rpx;
  position: absolute;
  top: 76rpx;
  left: 28rpx;
}

.halo {
  width: 194rpx;
  height: 50rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.55) 51%, rgba(255, 255, 255, 0) 100%);
  position: absolute;
  left: 118rpx;
  top: 160rpx;
  animation: around 4s linear infinite;
}

@keyframes rotation {
  from {
    transform: rotate(0);
  }

  to {
    transform: rotate(360deg);
  }
}

@keyframes around {
  0% {
    top: 160rpx;
  }

  50% {
    top: 306rpx;
  }

  100% {
    top: 160rpx;
  }
}
