page {
  width: 100%;
  height: 100%
}

.container {
  height: 100%;
  background: #EB5446;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.container .payment{
  width: 100%;
  height: 1206rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.container .balance{
  width: 470rpx;
  height: 90rpx;
  position: absolute;
  left: 50%;
  top: 100rpx;
  transform: translateX(-50%);
}

.orderSuc{
  width: 670rpx;
  background-color: #FFF7E6;
  position: absolute;
  left: 50%;
  top: 230rpx;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  padding-bottom: 80rpx;
}

.orderSuc .orderTop{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.redFlag{
  width: 100%;
  display: flex;
  justify-content: center;
  align-content: flex-end;
  margin-top: 28rpx;
  position: relative;
}

.redFlag .red-flag{
  width: 598rpx;
  height: 52rpx;
}

.redFlag .flag-text{
  font-size: 24rpx;
  color: #fff7e6;
  position: absolute;
  left: 50%;
  top: 14rpx;
  transform: translateX(-50%);
}

.rebate{
  width: 100%;
  height: 260rpx;
  position: relative;
}

.rebate .left-img{
  width: 158rpx;
  height: 240rpx;
  display: inline-block;
  position: absolute;
  left: 24rpx;
  top: 0;
}

.rebate .discount{
  width: 260rpx;
  height: 260rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  left: 50%;
  top: 0;
  transform: translateX(-50%);
}

.discount .distext{
  color: #2B2D33;
  font-size: 34rpx;
  margin-top: 40rpx;
}

.discount .price{
  color: #EB5446;
  margin-top: 20rpx;
}

.price .price-mark{
  font-size: 52rpx;
  font-weight: 500;
  font-family:PingFangSC-Medium,PingFang SC;
}

.price .price-num{
  font-size: 80rpx;
  font-family:DINAlternate-Bold,DINAlternate;
  font-weight: 600;
}

.rebate .right-img{
  width: 154rpx;
  height: 244rpx;
  position: absolute;
  right: 24rpx;
  top: 0;
}

.orderTicket{
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  box-sizing: border-box;
}

.orderTicket .discountNum{
  margin-right: 8rpx;
  display: inline-block;
  font-size: 28rpx;
  line-height: 40rpx;
  box-sizing: border-box;
}

.discountNum .general-text{
  color: #67686B;
}

.discount-name{
  color: #EB5446;
}

.orderTicket .otherText{
  color: #67686B;
  display: inline-block;
}

.orderButton{
  flex: 1;
  display: flex;
  justify-content: space-between;
  padding: 64rpx 70rpx 0 70rpx;
  box-sizing: border-box;
}

.order-btn{
  width: 240rpx;
  height: 76rpx;
  line-height: 76rpx;
  color: #EB5446;
  font-size: 32rpx;
  border: 2rpx solid #EB5446;
  border-radius: 38rpx;
  text-align: center;
  box-sizing: border-box;
}

.suc-img{
  width: 100%;
  height: 160rpx;
  position: absolute;
  top: 860rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 24rpx;
}

.suc-img>image{
  width: 670rpx;
  height: 160rpx;
}

.wallet{
  width: 100%;
  height: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 48rpx;
}

.wallet-top{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.wallet-top>.paysucc{
  width: 96rpx;
  height: 96rpx;
  margin-top: 36rpx;
}

.wallet-text{
  font-size: 32rpx;
  color: #292928;
  margin-top: 12rpx;
  font-weight: 500;
}

.wallet-num{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
  margin-top: 52rpx;
}

.wallet-num .wallet-sign{
  font-size: 36rpx;
  color: #2B2D33;
  font-weight: 500;
  padding-bottom: 10rpx;
  box-sizing: border-box;
}

.wallet-num .wallet-money{
  font-weight: 600;
  color: #292928;
  font-size: 64rpx;
}

.wallet-discount{
  margin-top: 24rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #E6E6E6;
  border-bottom: 1rpx solid #E6E6E6;
  padding: 22rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.wallet-discount>.discount{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: 400;
}

.discount>text:first-child{
  color: #2B2D33;
}

.discount>text:nth-child(2){
  color: #FF5A52;
}

.wallet-invite{
  border-bottom: 1rpx solid #E6E6E6;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.wallet-invite .invite-text{
  margin-top: 40rpx;
  color: #2B2D33;
  font-weight: 500;
}

.wallet-invite .invite-friend{
  margin-top: 8rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #2B2D33;
}

.invite-friend .invite-num{
  color: #FF5A52;
}

.invite-btn{
  background-color: #FF5A52;
  border-radius: 4rpx;
  height: 52rpx;
  line-height: 52rpx;
  padding: 0 26rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: 400;
  margin: 28rpx 0 32rpx 0;
}

.wallet-btns{
  margin-top: 64rpx;
  font-size: 30rpx;
  font-weight: 400;
  display: flex;
  justify-content: space-between;
  padding: 0 48rpx;
  box-sizing: border-box;
}

.wallet-btns .wallet-detail{
  color: #2B2D33;
  border: 1rpx solid #E0E0E0;
  border-radius: 6rpx;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  box-sizing: border-box;
  background-color: #fff;
}

.wallet-btns .wallet-index{
  color: #292928;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #FFEB0D;
  border-radius: 6rpx;
}