@import "/myfont.wxss";
.temponent{
    width: 100%;
    margin-right:8rpx; 
    display: flex;
    flex-direction: column;
    align-items: center
}
.temponent-img{
  width: 100%;
  height: 138rpx;
  border-radius: 12rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.title{
  color: #FFFFFF;
  font-size: 32rpx;
  margin-left: 46rpx
}

.temponent-margin{
  margin-top:-16rpx;
  margin-left:12rpx;
  display:flex;
  flex-wrap:wrap;
}

.temponent-margin .temponent-goods:last-of-type{
  margin-bottom: 16rpx;
}

.subtitle{
  width: 260rpx;
  height: 72rpx;
  line-height: 72rpx;
  color: #437107;
  font-size: 26rpx;
  margin-left: 78rpx

}
.temponent-img view{
  width: 702rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  height: 104rpx
}
.temponent-goods{
  width: 344rpx;
  position: relative;
  height: 560rpx;
  border-radius: 16rpx;
  background: #fff;
  display: inline-block;
  margin-left: 14rpx;
  margin-top: 16rpx;
}
.goods{
  position: relative;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  width: 100%;
  height: 344rpx;
  background: #fff
}
.returnCash{
  position: absolute;
  bottom: 0;
  width: 100%;
  display: flex;

}
.return-view{
  flex-grow: 1;
  height: 32rpx;
  line-height: 32rpx;
  color:#fff;
  text-align: center;
  font-size: 20rpx;
  align-self:flex-end;
  background:linear-gradient(318deg,rgba(255,37,0,1) 0%,rgba(255,129,0,1) 69%,rgba(255,110,0,1) 100%,rgba(255,129,0,1) 100%);
}
.return-view1{
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 8rpx 0 12rpx;
  background: #6D2CF2;
  font-size: 32rpx;
  box-shadow:0px 0px 4rpx 0px rgba(214,4,4,0.24);
  border-radius:16rpx 0px 0px 0px;
  color: #fff;
  font-family: "Alternate"
}
.goods image{
   border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  width: 100%;
  height: 100%;

}
.goods-text{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between
}
.goods-name{
  margin-top: 16rpx;
  width: 286rpx;
  line-height: 40rpx;
  height: 80rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #2B2D33;
  font-size: 28rpx;
  margin-left: 24rpx;
  word-break: break-all;
}
.discount{
  height:24rpx;
  margin-left: 24rpx;
  border: 2rpx solid #FF5A52;
  font-size:20rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,90,82,1);
  line-height:24rpx;
  text-align: center;
  border-radius: 14rpx; 
  padding: 0 8rpx;
}
.morning{
  margin-left: 8rpx;
  height:24rpx;
font-size:20rpx;
font-family:PingFangSC-Regular;
font-weight:400;
border: 2rpx solid #FFA333;
border-radius: 14rpx;
text-align: center;
padding: 0 6rpx;
color:rgba(255,163,51,1);
line-height:24rpx;
}
.goods-price{
  margin-top: 6rpx;
  display: flex;
  justify-content: flex-start;
  
}

.text1{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 40rpx;
  background:linear-gradient(270deg,rgba(255,90,82,1) 0%,rgba(255,125,82,1) 100%);
  color: #fff;
  left: 0;
  right: 0;
  font-size: 22rpx;
  text-align: center;
  line-height: 40rpx;
  z-index: 11
}
.text{
    position: absolute;
    top: 0;
    left:0;
    display: inline-block;
    padding: 0rpx 12rpx 0rpx 12rpx;
    background:linear-gradient(270deg,rgba(255,87,71,1) 0%,rgba(255,133,51,1) 100%);
    border-radius:8rpx 0px 16rpx 0px;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(255,255,255,1);
}
.price{
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: absolute;
  /* left: 20rpx; */
  bottom: 24rpx
}
.vipprice{
  /* text-decoration: line-through; */
  margin-left: 24rpx;
  color: #FF5A52;
  font-size: 32rpx;
  font-weight: 500
}
.complete{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
 
}
.complete view{
  width: 120rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  color: rgba(255, 255, 255, 1);
  background: rgba(0, 0, 0, .6);
  font-size: 26rpx
}
.saleprice{
  margin-left: 6rpx;
  color: #A0A1A3;
  font-size: 26rpx;
}
.add{
  position: absolute;
  bottom:14rpx;
  right: 20rpx;

  width: 56rpx;
  height: 56rpx;
  z-index: 100;

}
.add image{
  width: 100%;
  height: 100%;
}
.good_box{
  width: 14px;
  height:14px;
  position: fixed;
  border-radius: 50%;
  overflow: hidden;
  left: 50%;
  top: 50%;
  z-index: +99;
  background:red;
}