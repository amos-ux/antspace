page {
  background: rgba(245, 246, 247, 1);
}

.page {
  width: 100%;
  height: 100%;
}

.shops {
  position: fixed;
  z-index: 100;
  left: 24rpx;
  bottom: 56rpx;
  width: 88rpx;
  border-radius: 50%;
  box-shadow: 0 2rpx 4rpx 0 rgba(0, 0, 0, 0.2);
  height: 88rpx;
  background: #fff;
}

.shops-view {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.shops-view text {
  width: 44rpx;
  font-size: 20rpx;
  height: 32rpx;
  text-align: center;
  line-height: 32rpx;
  background: rgba(255, 90, 82, 1);
  color: rgba(255, 255, 255, 1);
  border-radius: 16rpx;
  position: absolute;
  right: -4rpx;
  top: 6rpx;
}

.shops-view image {
  width: 46rpx;
  height: 46rpx;
}

.header {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  color: rgba(43, 45, 51, 1);
  font-size: 24rpx;
  align-items: center;
  margin: 16rpx 0;
}

.header-text {
  width: 12rpx;
  height: 12rpx;
  margin-left: 32rpx;
  border-radius: 50%;
  background: rgba(255, 90, 82, 1);
}

.header-text1 {
  white-space: nowrap;
  color: rgba(43, 45, 51, 1);
  font-size: 24rpx;
  margin-left: 10rpx;
}

.empty {
  width: 100%;
  height: 78rpx;
  color: rgba(103, 104, 107, 1);
  font-size: 24rpx;
  text-align: center;
  line-height: 78rpx;
}

.goods {
  margin-left: 24rpx;
  position: relative;
  width: 702rpx;
  height: 268rpx;
  border-bottom: 2rpx solid #ebebeb;
  background: #fff;
  border-radius: 16rpx;
  display: flex;
}

.goods-img {
  width: 200rpx;
  height: 200rpx;
  margin-top: 24rpx;
  margin-left: 20rpx;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
}

.goodslist .goods:nth-child(n+2){
  margin-top: 16rpx;
}

.goodslist .goods:last-child{
  margin-bottom: 16rpx;
}

.goods-img image {
  width: 100%;
  height: 100%;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
}

.goods-text {
  width: 482rpx;
}

.goods-name {
  width: 440rpx;
  height: 88rpx;
  margin-left: 20rpx;
  margin-top: 24rpx;
  color: #2b2d33;
  font-size: 30rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.discount {
  height: 24rpx;
  margin-left: 20rpx;
  border: 2rpx solid #ff5a52;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 90, 82, 1);
  line-height: 24rpx;
  text-align: center;
  border-radius: 14rpx;
  padding: 0 6rpx;
}

.morning {
  margin-left: 8rpx;
  height: 24rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  border: 2rpx solid #ffa333;
  border-radius: 14rpx;
  text-align: center;
  padding: 0 6rpx;
  color: rgba(255, 163, 51, 1);
  line-height: 24rpx;
}

.goods-price {
  margin-top: 12rpx;
  display: flex;
  justify-content: flex-start;
}

.vipprice {
  margin-left: 20rpx;
  margin-top: 12rpx;
  color: #ff5a52;
  font-size: 34rpx;
  font-weight: 500;
}

.saleprice {
  margin-left: 20rpx;
  display: flex;
  justify-content: space-between;
}

.price {
  color: #a0a1a3;
  font-size: 24rpx;
}

.add {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  width: 56rpx;
  height: 56rpx;
}

.add image {
  width: 100%;
  height: 100%;
}

.good_box {
  width: 14px;
  height: 14px;
  position: fixed;
  border-radius: 50%;
  overflow: hidden;
  left: 50%;
  top: 50%;
  z-index: +99;
  background: red;
}

.noshop {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  text-align: center;
  background-color: #fff;
}

.noshop>image {
  width: 100%;
  margin-top: 220rpx;
}