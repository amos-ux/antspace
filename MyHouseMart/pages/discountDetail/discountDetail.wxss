page {
  background-color: #f5f6f7;
  position: relative;
  height: 100%;
}

.contanier {
  width: 100%;
  height: 100%;
  padding: 16rpx 24rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.discount {
  width: 344rpx;
  height: 528rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.contanier .discount:nth-child(2n) {
  margin-left: 14rpx;
}

.discount .shopimg {
  width: 344rpx;
  height: 344rpx;
  border-radius: 16rpx 16rpx 0 0;
  position: relative;
}

.show-img {
  width: 344rpx;
  height: 344rpx;
  border-radius: 16rpx 16rpx 0 0;
}

.shopimg .return-price {
  font-size: 24rpx;
  color: #fff;
  padding: 0 12rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 16rpx 0 16rpx 0;
  background: linear-gradient(270deg, rgba(255, 87, 71, 1) 0%, rgba(255, 133, 51, 1) 100%);
  box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.1);
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
}

.content {
  padding: 20rpx 24rpx 24rpx 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
}

.content .title {
  width: 100%;
  color: #2b2d33;
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.content .desc {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  font-size: 20rpx;
  padding-top: 12rpx;
  height: 44rpx;
  box-sizing: border-box;
}

.desc .satisfied {
  padding: 0 10rpx;
  height: 28rpx;
  line-height: 28rpx;
  color: #ff5a52;
  border: 1rpx solid #ff5a52;
  border-radius: 16rpx;
  margin-right: 6rpx;
}

.desc .stTimes {
  padding: 0 10rpx;
  height: 28rpx;
  line-height: 28rpx;
  color: #ffa333;
  border: 1rpx solid #ffa333;
  border-radius: 16rpx;
  margin-right: 6rpx;
}

.price {
  margin-top: 12rpx;
}

.price .disPrice {
  color: #ff5a52;
  font-size: 32rpx;
  margin-right: 8rpx;
  font-weight: 500;
}

.price .salePrice {
  color: #a0a1a3;
  font-size: 24rpx;
  text-decoration: line-through;
  font-weight: 400;
}

.add-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
}

.add-icon>image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.shops {
  position: fixed;
  z-index: 100;
  left: 24rpx;
  bottom: 56rpx;
  width: 88rpx;
  border-radius: 50%;
  box-shadow: 0 2rpx 4rpx 0 rgba(0, 0, 0, 0.2);
  height: 88rpx;
  background: #fff;
}

.shops-view {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.shops-view text {
  width: 44rpx;
  height: 32rpx;
  text-align: center;
  line-height: 32rpx;
  background: rgba(255, 90, 82, 1);
  color: rgba(255, 255, 255, 1);
  border-radius: 16rpx;
  font-size: 20rpx;
  position: absolute;
  right: -4rpx;
  top: 6rpx;
}

.shops-view image {
  width: 46rpx;
  height: 46rpx;
}

.good_box {
  width: 14px;
  height: 14px;
  position: fixed;
  border-radius: 50%;
  overflow: hidden;
  left: 50%;
  top: 50%;
  z-index: +99;
  background: red;
}

.noshop {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  text-align: center;
  background-color: #fff;
}

.noshop>image {
  width: 100%;
  margin-top: 220rpx;
}