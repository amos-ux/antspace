page {
  background: #fff;
}

.page {
  width: 100%;
  display: flex;
  flex-direction: column;
  border-top: 1rpx solid #e6e6e6;
  box-sizing: border-box;
}

.page-view,.page-view-address{
  width: 100%;
  height: 108rpx;
  line-height: 108rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f7f7f7;
  background: #fff;
  box-sizing: border-box;
  font-size: 30rpx;
  position: relative;
  overflow: hidden;
}

.page-text {
  flex:1;
  font-size: 32rpx;
  margin-left: 40rpx;
  margin-right: 54rpx;
  color: #2B2D33;
}

.default-address{
  display: inline-block;
  height: 120rpx;
  line-height: 120rpx;
  color: #67686B;
  font-size: 32rpx;
  margin-left: 12rpx;
}

.page-view-address::after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -4px;
  right: 36rpx;
}

.address-label {
  margin-left: 40rpx;
  display: flex;
  align-items: center;
  flex: 1;
}

.page-company{
  width: 106rpx;
  font-size: 26rpx;
  height: 48rpx;
  border-radius: 24rpx;
  color: #ffa333;
  border: 2rpx solid #ffa333;
  line-height: 48rpx;
  text-align: center;
  background-color: #fff2d9;
}

.page-companys {
  width: 106rpx;
  height: 48rpx;
  font-size: 26rpx;
