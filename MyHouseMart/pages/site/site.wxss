  margin-left: 35rpx;
}

checkbox .wx-checkbox-input {
  width: 40rpx; 
  height: 40rpx;
  box-sizing: border-box;
  border-radius: 50%;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #FFA333;
  border: 1rpx solid #FFA333;
  box-sizing: border-box;
  border-radius: 50%;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 24rpx;
  background: transparent;
  color: #fff;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
  box-sizing: border-box;
  border-radius: 50%;
}

.checkbox {
  margin-left: 32rpx;
  height: 120rpx;
  display: block;
  line-height: 120rpx;
  color: #67686b;
  font-size: 32rpx;
}

label {
  font-size: 13px;
}

.flex-grow-1 {
  min-width: 0;
  -webkit-box-flex: 1;
  -ms-flex-positive: 1;
  flex-grow: 1;
  -ms-flex-negative: 1;
  flex-shrink: 1;
}

.del-btn {
  margin-top: 28rpx;
  text-align: center;
  width: 680rpx;
  line-height: 92rpx;
  height: 92rpx;
  border-radius: 12rpx;
  color: #2B2D33;
  font-weight: 500;
  margin-left: 35rpx;
  box-sizing: border-box;
  border: 1rpx solid #d9d9d9;
}

.page-view-title {
  color: #67686B;
  width: 170rpx;
  padding-left: 32rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}