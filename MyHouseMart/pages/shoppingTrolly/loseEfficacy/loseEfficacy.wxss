  border-top: 12rpx solid #63646b;
  border-left: 10rpx solid #fff;
  border-right: 10rpx solid #fff;
}

.cart-goods{
  margin-top: 24rpx;
  width: 100%;
  opacity: 0.8;
  display: flex;
  justify-content: space-between;
}

.lose .cart-goods:last-of-type{
  margin-bottom: 24rpx;
}

.cart-icon{
  width: 80rpx;
  height: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center
}
.icon{
color: rgba(160, 161, 163, 1);
font-size: 24rpx
}

.cart-commodity{
  width: 622rpx;
  height: 160rpx;
  display: flex;
}
.commodity-img{
  width: 160rpx;
  height: 160rpx;
  position: relative
}
.commodity-img image{
  width: 100%;
  height: 100%;
  border-radius: 8rpx
}

.text{
    position: absolute;
    top: 0;
    left:0;
    display: inline-block;
    padding: 4rpx 12rpx 4rpx 12rpx;
    background:rgba(160, 161, 163, 1);
    border-radius:8rpx 0px 16rpx 0px;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(255,255,255,1);
}
.commodity-content{
  width: 442rpx;
  height: 100%;

}
.commodity-name{
  width: 400rpx;
  color: rgba(43, 45, 51, 1);
  font-size: 28rpx;
  margin-left: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.commodity-specification{
  color: rgba(160, 161, 163, 1);
  font-size: 24rpx;
  margin-left: 20rpx;
