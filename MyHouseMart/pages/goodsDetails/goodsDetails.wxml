<wxs module="we">
  var toFixed = function(value) {
    if(typeof value == "number"){
      return value.toFixed(2)
    }
  }
  var replace = function(value) {
    value = value + ""
    var arr = value.split("")
    arr[0] = "x"
    return arr.join("")
  }
  var sub = function(str) {
    if(str.length==0||str==undefined){
      return;
    }
    return str.substring(0, 5)
  }

  module.exports = {
    toFixed: toFixed,
    replace: replace,
    sub: sub
  }
</wxs>