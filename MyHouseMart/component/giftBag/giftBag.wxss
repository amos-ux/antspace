@import '/myfont.wxss';
.select-red, .one-lick {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.45);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 998;
}

.select-view {
  width: 580rpx;
  /* height: 420rpx; */
  background: #fff;
  border-radius: 12rpx;
}

.nearby {
  width: 100%;
  height: 121rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.nearby image {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  right: 24rpx;
  top: 44rpx;
}

.selectBranch {
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.select-text1 {
  color: #67686b;
  font-size: 36rpx;
  margin-left: 36rpx;
}

.select-text2 {
  color: #ffa333;
  font-size: 36rpx;
  margin-right: 36rpx;
}

.selectbranch {
  width: 100%;
  border-top: 2rpx solid #ebebeb;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #2b2d33;
  font-size: 36rpx;
}

.selectbranch::after {
  content: '';
  display: inline-block;
  width: 14rpx;
  height: 14rpx;
  border-top: 1px solid #656565;
  border-right: 1px solid #656565;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
  margin-bottom: 4rpx;
}

.good_box {
  width: 14px;
  height: 14px;
  position: fixed;
  border-radius: 50%;
  overflow: hidden;
  left: 50%;
  top: 50%;
  z-index: +99;
  background: red;
}

.background_image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.background_image image {
  width: 100%;
  height: 100%;
}

.new_block {
  width: 638rpx;
  height: 722rpx;
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translate(-50%, -35%);
  z-index: 1005;
  background: url("https://antspace-dev-img-1.oss-cn-shenzhen.aliyuncs.com/fb00519dee184eabbcf3bf6b06abf619.png") no-repeat;
  background-size: 100% 100%;
  /* background-size: contain; */

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center

}
