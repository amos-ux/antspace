.page{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 99999;
  display: flex;
  flex-direction: column;
  justify-content: flex-end
}
.specification{
  width: 100%;
  background: #fff
}
.specification-top{
  height: 312rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.big-box{
  height: 200rpx;
  width: 686rpx;
  display: flex;
  justify-content: space-between;
}
.specification-img{
  width: 200rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center
}
.specification-img image{
  width: 100%;
  height: 100%
}
.specification-right{
  width: 454rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}
.text-Name{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.text{
  color: #2B2D33;
  font-weight: 500;
  font-size: 36rpx;
  width: 300rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.text-close{
  width: 36rpx;
  height: 36rpx;
}
.text-close image{
  width: 100%;
  height: 100%;
}
.price{

}
.price-view{
  height: 32rpx;
  padding: 0 10rpx;
  display: inline-block;
  border: 1rpx solid #FF7459;
  border-radius: 16rpx;
  color: #FF7459;
  font-size: 20rpx;
  text-align: center;
  line-height: 32rpx
}

.price-view1{
  display: flex;
  height: 44rpx;
  align-items: center;
}
.vip-price{
  color: #FF7459;
  font-size: 32rpx;
}
.sale-price{
  color: #A3A5AD;
  font-size: 26rpx;
  margin-left: 8rpx;
}
.option{
  width: 100%;
  padding: 0 58rpx 58rpx 32rpx;


}
.select{
  color: #63646B;
  font-size: 28rpx;

}
.option-content{
  display: flex;
  flex-wrap: wrap;
  margin-left: -24rpx
}
.content{
  width: 204rpx;
  height: 64rpx;
  border: 1rpx solid #DCDDE0;
  color: #63646B;
  font-size: 28rpx;
  border-radius: 8rpx;
  text-align: center;
  line-height: 64rpx;
  margin-top: 24rpx;
  margin-left: 24rpx
}

.button{
  width: 100%;
  height: 112rpx;
  display: flex;
  justify-content: center;
  align-content: center
}
.button view{
  width:704rpx;
  height:88rpx;
  background:rgba(255,116,89,1);
  border-radius:8rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  line-height: 88rpx

}